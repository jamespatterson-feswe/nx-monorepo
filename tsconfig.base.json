{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["jest", "node"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
