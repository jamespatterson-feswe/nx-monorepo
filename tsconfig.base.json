{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["jest", "node"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/ui-web-components": ["libs/ui-web-components/src/index.ts"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "tmp"]
}
