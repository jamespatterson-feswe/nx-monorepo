{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "types": ["jest", "node"]
  },
  "files": [],  // No need to explicitly define files unless necessary
  "include": [
    "src/**/*",
    "tsconfig.json",
    "*.spec.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.config.js"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"  // Ensure this path is correct
}
